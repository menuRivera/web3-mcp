{
    "manifest_version": 3,
    "name": "Web3 MCP Bridge",
    "version": "0.1.0",
    "description": "An extension that helps perform transactions on Web3.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "alarms"
    ],
    "background": {
      "scripts": ["dist/background.js"],
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["dist/content.js"] 
      }
    ]
  }