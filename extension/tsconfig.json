{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["firefox-webext-browser"],
    "lib": ["ES2017", "DOM", "WebWorker"],
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}